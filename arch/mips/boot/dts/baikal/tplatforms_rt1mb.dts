/dts-v1/;

#include <dt-bindings/interrupt-controller/mips-gic.h>
#include <dt-bindings/gpio/gpio.h>

#include  "baikal_t1_soc.dtsi"
#include  "baikal_mdio.dtsi"

/ {
	model = "Baikal-T1 RT1MB board";
	compatible = "baikal,mips", "baikal,baikal-t1-soc", "tplatforms,baikal-rt1mb-board";

	chosen {
		bootargs = "root=/dev/ram rw console=ttyS0,115200 earlyprintk=uart8250,mmio32,0x1F04A000,115200 nohtw";
		linux,initrd-start = <0 0x01000000>;
		linux,initrd-end   = <0 0x02000000>;
	};

	memory {
		device_type = "memory";
		reg = <0 0x00000000 0 0x08000000>,
		      <0 0x20000000 0 0x60000000>;
	};
};

&usb {
	status = "okay";

	reset-gpio = <&porta 18 GPIO_ACTIVE_LOW>;
};

&sata {
	status = "okay";
};

&pci {
	status = "okay";
};

&gmac0 {
	status = "okay";
};

&gpio {
	status = "okay";
};

&gpio3 {
	status = "okay";
};

&bc {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";

	i2c-switch@70 {
		compatible = "nxp,pca9548";
		reg = <0x70>;
		#address-cells = <1>;
		#size-cells = <0>;

		i2c@5 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <5>;

			eeprom@53 {
				compatible = "atmel,24c512";
				reg = <0x53>;
				pagesize = <128>;
			};
		};

		i2c@6 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <6>;
			eeprom@50 {
				compatible = "atmel,24c512";
				reg = <0x50>;
				pagesize = <128>;
			};
		};

		i2c@7 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <7>;
			rtc@51 {
				compatible = "nxp,pcf2129", "nxp,pcf2127";
				reg = <0x51>;
			};
		};
	};
};

&spi0 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <&porta 14 GPIO_ACTIVE_LOW>, <0>;

	mmc-slot@0 {
		compatible = "mmc-spi-slot";
		reg = <0>;
		voltage-ranges = <2000 3600>;
		spi-max-frequency = <15000000>;
		/* Card-Detect GPIO (not working at the moment) */
		/* gpios = <&porta 15 GPIO_ACTIVE_LOW>; */
	};
};

&spi1 {
	status = "okay";
	num-cs = <1>;
};

&spi2 {
	status = "okay";
	num-cs = <1>;

	boot_flash: n25q128a11@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "micron,n25q128a11", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <500000>;
		m25p,fast-read;

		partition@0 {
			label = "bootloader";
			reg = <0x0 0xE0000>;
			read-only;
		};

		partition@1 {
			label = "environment";
			reg = <0xE0000 0x10000>;
		};

		partition@2 {
			label = "information";
			reg = <0xF0000 0x10000>;
			read-only;
		};

		partition@3 {
			label = "multiimage";
			reg = <0x100000 0xF00000>;
			read-only;
		};

		partition@4 {
			label = "firmware";
			reg = <0x0 0x1000000>;
		};
	};
};

&pvt {
	status = "okay";
};

&efuse {
	status = "okay";
};
