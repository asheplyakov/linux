#include <dt-bindings/interrupt-controller/mips-gic.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/net/mscc-phy-vsc8531.h>

#include  "baikal_t1_soc.dtsi"

/ {
	model = "Baikal-T1 MRBT1 Mezzanine Card";
	compatible = "baikal,mips", "baikal,baikal-t1-soc", "tplatforms,baikal-mrbt1-card";

	chosen {
		bootargs = "root=/dev/ram rw console=ttyS0,115200 earlyprintk=uart8250,mmio32,0x1F04A000,115200 nohtw";
		linux,initrd-start = <0 0x01000000>;
		linux,initrd-end   = <0 0x02000000>;
	};

	memory {
		device_type = "memory";
		reg = <0 0x00000000 0 0x08000000>,
		      <0 0x20000000 0 0x60000000>;
	};
};

&usb {
	status = "okay";

	reset-gpio = <&porta 13 GPIO_ACTIVE_LOW>;
};

&sata {
	status = "okay";
};

&pci {
	status = "okay";

	/* Deassert downstream devices reset pin */
	reset-gpio = <&porta 8 GPIO_ACTIVE_LOW>;
};

&xgmac {
	status = "disabled";
};

&gmac0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&gmac0_phy>;
	snps,reset-gp-out;
	snps,reset-active-low;
	snps,reset-delays-us = <0 2000 16000>;

	gmdio0: gmac0_mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		gmac0_phy: ethernet-phy@1 {
			compatible = "microsemi,vsc8531", "ethernet-phy-id0007.0570", "ethernet-phy-ieee802.3-c22", "ethernet-phy-ieee802.3-c45";
			reg = <0x1>;

			vsc8531,vddmac = <1800>;
			vsc8531,edge-slowdown = <0>;
			vsc8531,led-0-mode = <VSC8531_LINK_1000_ACTIVITY>;
			vsc8531,led-1-mode = <VSC8531_LINK_100_ACTIVITY>;
		};
	};
};

&gmac1 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&gmac1_phy>;
	snps,reset-gp-out;
	snps,reset-active-low;
	snps,reset-delays-us = <0 2000 16000>;

	gmdio1: gmac1_mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		gmac1_phy: ethernet-phy@2 {
			compatible = "microsemi,vsc8531", "ethernet-phy-id0007.0570", "ethernet-phy-ieee802.3-c22", "ethernet-phy-ieee802.3-c45";
			reg = <0x2>;

			vsc8531,vddmac = <1800>;
			vsc8531,edge-slowdown = <0>;
			vsc8531,led-0-mode = <VSC8531_LINK_1000_ACTIVITY>;
			vsc8531,led-1-mode = <VSC8531_LINK_100_ACTIVITY>;
		};
	};
};

&gpio {
	status = "okay";
};

&gpio3 {
	status = "okay";
};

&bc {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";

	bmc: bmc@8 {
		compatible = "tp,bt-bmc";
		reg = <0x08>;
	};

	shred: gpio@21 {
		compatible = "nxp,pcf8574";
		reg = <0x21>;
		gpio-controller;
		#gpio-cells = <2>;
		interrupt-parent = <&porta>;
		interrupts = <25 IRQ_TYPE_LEVEL_LOW>;
		interrupt-controller;
		#interrupt-cells = <2>;
		ngpios = <8>; /* Informative */
	};

	fru: eeprom@53 {
		compatible = "atmel,24c32";
		reg = <0x53>;
		pagesize = <32>;
	};

	spd: eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <8>;
	};

	clkgen0: clkgen@68 {
		compatible = "idt,5p49v59";
		reg = <0x68>;
	};

	clkgen1: clkgen@6A {
		compatible = "idt,5p49v59";
		reg = <0x6A>;
	};
};

&uart1 {
	status = "okay";
};

&spi0 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <&porta 14 GPIO_ACTIVE_LOW>, <0>;

	mmc-slot@0 {
		compatible = "mmc-spi-slot";
		reg = <0>;
		voltage-ranges = <2000 3600>;
		spi-max-frequency = <15000000>;
		/* Card-Detect GPIO */
		gpios = <&porta 15 GPIO_ACTIVE_LOW>;
	};
};

&spi1 {
	status = "okay";
	num-cs = <4>;
};

&spi2 {
	status = "okay";
	num-cs = <1>;

	boot_flash: mt25qu128@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0>;
		compatible = "micron,mt25qu128", "jedec,spi-nor";
		spi-max-frequency = <500000>;
		m25p,fast-read;

		partition@0 {
			label = "bootloader";
			reg = <0x0 0xE0000>;
			read-only;
		};

		partition@1 {
			label = "environment";
			reg = <0xE0000 0x10000>;
		};

		partition@2 {
			label = "information";
			reg = <0xF0000 0x10000>;
			read-only;
		};

		partition@3 {
			label = "multiimage";
			reg = <0x100000 0xF00000>;
			read-only;
		};

		partition@4 {
			label = "firmware";
			reg = <0x0 0x1000000>;
		};
	};
};

&pvt {
	status = "okay";
};

&efuse {
	status = "okay";
};
